{
  "name": "preact-quickstart",
  "version": "1.0.0",
  "license": "MIT",
  "description": "Template project for a basic Preact app with the default setup",
  "scripts": {
    "lint": "eslint src",
    "test": "jest",
    "dev": "preact watch",
    "start": "npm run dev",
    "build": "preact build",
    "serve": "sirv build --port 8080 --cors --single"
  },
  "dependencies": {
    "preact": "^10.5.8",
    "preact-render-to-string": "^5.1.12",
    "preact-router": "^3.2.1"
  },
  "devDependencies": {
    "enzyme": "^3.10.0",
    "enzyme-adapter-preact-pure": "^2.0.0",
    "eslint": "^7.17.0",
    "eslint-config-preact": "^1.1.3",
    "jest": "^26.6.3",
    "jest-preset-preact": "^4.0.2",
    "preact-cli": "^3.0.5",
    "sirv-cli": "^1.0.10"
  },
  "eslintConfig": {
    "extends": "preact",
    "ignorePatterns": [
      "build/"
    ]
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.js",
      "<rootDir>/tests/__mocks__/setupTests.js"
    ]
  }
}
